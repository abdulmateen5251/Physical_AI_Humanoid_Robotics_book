# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API (for Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Qdrant Vector Store
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=physical_ai_humanoid_robotics_course

# Neon Postgres Database
DATABASE_URL=postgresql+asyncpg://user:password@your-neon-host.neon.tech/dbname

# Better-Auth Credentials
BETTER_AUTH_CLIENT_ID=your-client-id
BETTER_AUTH_CLIENT_SECRET=your-client-secret
JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-chars

# Redis Cache (optional, for personalization)
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# RAG Settings
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o
MAX_RETRIEVAL_CHUNKS=10
CHUNK_SIZE_MIN=400
CHUNK_SIZE_MAX=800
